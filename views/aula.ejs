<body>
    <!-- HEADER -->
    <header class="custom-header">
        <div class="logo">
            <a href="/"><img src="/img/header/headerlogoinicial.svg" alt="" id="teste" onmouseenter="teste()"
                    onmouseleave="teste()"></a>
            <div class="pesquisa">
                <img src="/img/header/headersearch.svg" alt="">
                <form action="">
                    <input type="search" name="" id="" placeholder="Pesquise por qualquer coisa..."
                        class="caixa-pesquisa">
                </form>
            </div>
        </div>
        <div class="direita">
            <ul>
                <li><a href="/user/<%=user.username%>" class="botao">Aprendizado</a></li>
                <li><a href="/user/<%=user.username%>/configurar-conta"><img src="<%= user.fotoPerfil %>" alt="fotoperfil" id="fotoPerfil"></a></li>
            </ul>
        </div>
    </header>

    <main class="principal">
        <div class="container-video">

            <div class="video">
                <iframe src="<%= aulas[atual].link_aula %>" frameborder="0" width="850px"
                    height="420px"></iframe>
                <div class="info-video">
                    <h3><%= aulas[atual].nome_aula %></h1>
                    <div class="controles">
                        <% if (atual > 0 ) { %>
                        <a href="/library/<%= aulas[atual].categoria_curso %>/<%= aulas[atual].nome_curso %>?aula=<%= aulas[atual - 1].nome_aula %>"><img src="/img/buttons/botaoAnterior.svg" alt="Anterior" height="25px"></a>
                        <% } %>
                        <% if (atual < aulas.length - 1) { %>
                        <a href="/library/<%= aulas[atual].categoria_curso %>/<%= aulas[atual].nome_curso %>?aula=<%= aulas[atual + 1].nome_aula %>"><img src="/img/buttons/botaoProximo.svg" alt="Proximo" height="25px"></a>
                        <% } %>
                    </div>
                </div>
            </div>

            <div class="descricao">
                <div class="descricao-texto">
                    <h4>DESCRIÇÃO</h4> <br>
                    <p><%= aulas[atual].descricao_aula %></p>
                </div>
                <!-- <div class="descricao-infos">
                    <p>Tempo de aula: 28 min</p>
                    <p>Legenda:sim <br>Idioma:Portugues</p>
                </div> -->
            </div>

        </div>


        <div class="menu-curso">
            <h3>AULAS DO CURSO</h3>
            <hr class="linha">
            <ul>
                <% aulas.forEach((aula, index) => { %>
                <li class="menu-botao"><a href="/library/<%= aula.categoria_curso %>/<%=aula.nome_curso%>?aula=<%=aula.nome_aula%>"><%= index + 1 %></a></li>
                <hr class="linha-pequena">
                <% }) %>
            </ul>
        </div>

    </main> 

    <footer class="footer">

    </footer>
    <script src="/js/header.js"></script>
</body>

</html>